@model MovieRental3.Models.AllMoviesView

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add a new movie to the list", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Year of Release
        </th>
        <th></th>
    </tr>

@foreach (var movie in Model.MoviesList) {
    <tr>
        <td>
            @movie.Title
        </td>
        <td>
            @movie.YearOfRelease
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=movie.MovieId }) |
            @Html.ActionLink("Edit", "Edit", new { id=movie.MovieId }) |
            @Html.ActionLink("Delete", "Delete", new { id=movie.MovieId })
        </td>
    </tr>
}

</table>
