@model Unexpo.Core.Models.Subject

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>

        @Html.HiddenFor(model => model.SubjectId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectName)
            @Html.ValidationMessageFor(model => model.SubjectName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TeacherId)
            @Html.ValidationMessageFor(model => model.TeacherId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "SubjectsByTeacherId", new { id = Model.TeacherId})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
