@model Unexpo.Models.Department.AllDepartmentsView

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a href="@Url.Action("Create")">
    <button type="button" class="btn btn-primary btn-sm margin">
        <i class="glyphicon glyphicon-plus"></i>
        New department
    </button>
    
</a>

@*<div class="text-decoration-none">
    @Html.ActionLink("Create a new department", "Create", null, new {@class = "btn-sm btn-primary"})
</div>*@
<table class="table table-hover">
    <tr>
        <th>Department Name</th>
        <th></th>
    </tr>

@foreach (var department in Model.Departments) {
    <tr>
            @Html.HiddenFor(x => department.DepartmentId)
        <td>
            @Html.DisplayFor(modelItem => department.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=department.DepartmentId }) |
            @Html.ActionLink("Teachers", "TeachersByDepartmentId", "Teacher", new { id=department.DepartmentId}, null) |
            @Html.ActionLink("Delete", "Delete", new { id=department.DepartmentId })
        </td>
    </tr>
}

</table>
